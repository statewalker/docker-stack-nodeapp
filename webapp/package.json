{
  "name": "myapp",
  "version": "1.0.0",
  "description": "Running Node.js and Remix on Docker",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "sideEffetcs": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "yarn run generate:css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "yarn generate:css --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "generate:css": "unocss './app/**/*.{js,ts,jsx,tsx}' -o ./app/styles/uno.css",
    "start": "yarn dev",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@remix-run/react": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@types/react": "^18.0.25",
    "cross-env": "^7.0.3",
    "i18next": "^22.0.6",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-fs-backend": "^2.0.1",
    "i18next-http-backend": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "remix": "^1.7.6",
    "remix-i18next": "^4.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.6",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@unocss/cli": "^0.46.4",
    "@unocss/reset": "^0.46.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.3",
    "unocss": "^0.46.4"
  }
}
